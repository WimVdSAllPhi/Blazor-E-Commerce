@page "/login"

<PageTitle>K & A Dreamdeals - Login</PageTitle>

<div class="card border-primary">
    <div class="card-header bg-primary text-white">Login</div>
    <div class="card-body">
        <EditForm Model="_user" OnValidSubmit="HandleLogin">
            <DataAnnotationsValidator />

            <div class="form-group row mb-3 align-items-end">
                <label for="email" class="col-sm-4 col-md-3 col-lg-2 col-form-label">Email</label>
                <div class="col-sm-8 col-md-9 col-lg-10">
                    <InputText id="email" @bind-Value="_user.Email" class="form-control" />
                    <ValidationMessage For="@(() => _user.Email)" />
                </div>
            </div>

            <div class="form-group row mb-3 align-items-end">
                <label for="password" class="col-sm-4 col-md-3 col-lg-2 col-form-label">Password</label>
                <div class="col-sm-8 col-md-9 col-lg-10">
                    <InputText id="password" @bind-Value="_user.Password" class="form-control" type="password" />
                    <ValidationMessage For="@(() => _user.Password)" />
                </div>
            </div>

            <div class="form-group row mb-3">
                <div class="col-sm-8 col-md-9 col-lg-10 offset-sm-4 offset-md-3 offset-lg-2">
                    <button type="submit" class="btn btn-primary">Login</button>
                </div>
            </div>
        </EditForm>
    </div>
</div>

<div class="text-danger">
    <span>@_errorMessage</span>
</div>
